<body>
    <!-- Page Top	 -->
    <div id="page-top" class="page-top"></div>
    <!-- Page Top End -->
    <!-- Header Section -->

    <header id="masthead" class="masthead site-header">
        <div id="main-menu" class="main-menu navbar-fixed-top">
            <div class="container">
                <a class="site-logo main-logo" href="./">
                    @*<h2>Hamara Magazine</h2>*@
                    <img src="~/images/logo-2.png"  />
                </a><!-- /.navbar-brand -->

                <ul class="cd-header-buttons">
                    <li><a class="cd-search-trigger" href="#cd-search"><span></span></a></li>
                </ul> <!-- cd-header-buttons -->

                <nav class="pull-right" role="navigation">
                    <!-- Main navigation -->
                    <ul id="menu" class="menu">
                        <li class="active"><a href="#page-top">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul> <!-- /.nav .navbar-nav -->
                    <div id="cd-search" class="cd-search">
                        <form>
                            <input type="search" id="search" placeholder="Search">
                            <!-- <button type="close" class="close">X</button> -->
                        </form>
                    </div>
                </nav> <!-- /.navbar-collapse  -->
            </div><!-- /.container -->
        </div><!-- /#main-menu -->
    </header><!-- /#masthead -->
    <!-- Header Section End -->
    <!-- Main Slider SEction -->
    @RenderBody()
    <footer id="footer" class="footer text-center">
        <div class="section-area">
            <div class="container">
                <div class="footer-top wow fadeInUp animated" data-wow-offset="10" data-wow-duration="1.5s">
                    <div class="copyright">
                        &copy; <a href="#">Hamara Magazine</a> 2016, All Right Reserves
                    </div><!-- /.copy-right -->
                    <div class="credit">
                        Designed & Developed By <a href="#">Team Loyal</a>
                    </div><!-- /.credit -->
                </div><!-- /.footer-top -->
                <div class="footer-bottom wow fadeInUp animated" data-wow-offset="10" data-wow-duration="1.5s">
                    <ul class="footer-social">
                        <li><a href="#" class="fa fa-twitter"></a></li>
                        <li><a href="#" class="fa fa-facebook"></a></li>
                        <li><a href="#" class="fa fa-pinterest"></a></li>
                        <li><a href="#" class="fa fa-dribbble"></a></li>
                        <li><a href="#" class="fa fa-linkedin"></a></li>
                        <li><a href="#" class="fa fa-google-plus"></a></li>
                    </ul>
                </div><!-- /.footer-bottom -->
            </div><!-- /.container -->
        </div><!-- /.section-area -->
    </footer><!-- /#footer -->
    <!-- Footer Section End -->
    <!-- Style Switcher -->
    <!-- Scrpll To Top Section -->

    <div id="scroll-to-top">
        <span class="scroll-to-top">
            <i class="fa fa-chevron-up"></i>
        </span><!-- /.scroll-to-top -->
    </div><!-- /#scroll-to-top -->
    <!-- Scrpll To Top Section End-->
    <!-- Include modernizr-2.8.0.min.js
        <script src="/assets/js/modernizr-2.8.0.min.js"></script>
    -->
    <!-- Include jquery.min.js plugin -->
    <script src="/assets/js/jquery.min.js"></script>

    <!-- Include JavaScript Plugins -->
    <script src="/assets/js/plugins.js"></script>

    <!-- Include JavaScript Functions -->
    <script src="/assets/js/functions.js"></script>

    <!-- Include Slicknav Plugin -->
    <script src="/assets/js/jquery.slicknav.js"></script>

    <!-- Include wow.js Plugins -->
    <script src="/assets/js/wow.min.js"></script>

    <script src="/assets/js/jquery.magnific-popup.min.js"></script>

    <!-- Google Maps Script  -->
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>

    <!-- Gmap3.js For Static Maps -->
    <script src="/assets/js/gmap3.js"></script>

    <script src="/assets/js/counterup.js"></script>

    <script type="text/javascript">


        jQuery(document).ready(function ($) {
            "use strict";



            $('.image-popup-vertical-fit').magnificPopup({
                type: 'image',
                closeOnContentClick: true,
                mainClass: 'mfp-img-mobile',
                image: {
                    verticalFit: true
                }

            });

            /*----------- wow animation with support of wow.js and animation.css ----------------*/
            var wow = new WOW(
			{
			    boxClass: 'wow',      // animated element css class (default is wow)
			    animateClass: 'animated', // animation css class (default is animated)
			    offset: 0,          // distance to the element when triggering the animation (default is 0)
			    mobile: false       // trigger animations on mobile devices (true is default)
			}
	);
            wow.init();

            /*----------- Google Map - with support of gmaps.js ----------------*/

            function isMobile() {
                return ('ontouchstart' in document.documentElement);
            }

            function init_gmap() {
                if (typeof google == 'undefined') return;
                var options = {
                    center: [53.599339, 10.172954],
                    zoom: 15,
                    mapTypeControl: true,
                    mapTypeControlOptions: {
                        style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
                    },
                    navigationControl: true,
                    scrollwheel: false,
                    streetViewControl: true
                }

                if (isMobile()) {
                    options.draggable = false;
                }

                $('#googleMaps').gmap3({
                    map: {
                        options: options
                    },
                    marker: {
                        latLng: [53.599339, 10.172954],
                        options: { icon: 'images/mapicon.png' }
                    }
                });
            }

            init_gmap();

            /*---------------------- Current Menu Item -------------------------*/


            $('#main-menu #menu').onePageNav({
                currentClass: 'active',
                changeHash: false,
                scrollSpeed: 750,
                scrollThreshold: 0.5,
                scrollOffset: 60,
                filter: ':not(.sub-menu a, .not-in-home)',
                easing: 'swing'
            });


            $('.counter').counterUp({
                delay: 15,
                time: 1500
            });
        });

    </script>

</body>
</html>
