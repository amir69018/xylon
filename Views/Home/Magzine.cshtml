@{
    ViewBag.Title = "Magzine";
    Layout = "~/Views/Shared/Magzine_Layout.cshtml";
    

}



<!-- Add your site or application content here -->
<div class='books_container'>
    <div id='book'>
        <div id='cover'>
            <img src="/magzine-assets/images/1.jpg" width="100%" height="100%" />
        </div>
        <div class='pagefx hardpage'>
            <img src="/magzine-assets/images/2.jpg" width="100%" height="100%" />
        </div>
        @for (int i = 3; i < 40; i++) {
            string name = i + ".jpg";
            <div class='pagefx softpage'>
                <img src="/magzine-assets/images/@name" width="100%" height="100%" />
            </div>
        }
        <div class='last_cover'>
            <img src="/magzine-assets/images/cover_last.jpg" width="100%" height="100%" />
        </div>
    </div> <!-- book -->
</div>
<div id='thumbs_holder'></div>




